<style>
    h1 {
        color: black;
    }

    body {
        background-color:grey;
    }
</style>
<form class="form-horizontal" action="/action_page.php">
<div class="display-6">
    <div class="text-center">
        <h1>LOGIN PAGE</h1>

        <div class="form-group">
            <label class="control-label col-xs-3" for="email">Email:</label>
            <div class="col-xs-3">
                <input type="email" class="form-control" id="email" placeholder="Enter email">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3" for="username">Username:</label>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="username" placeholder="Enter username">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-xs-3" for="pwd">Password:</label>
            <div class="col-xs-3">
                <input type="password" class="form-control" id="pwd" placeholder="Enter password">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3" for="pwd">Confirm Password:</label>
            <div class="col-xs-3">
                <input type="password" class="form-control" id="pwd" placeholder="Re-Enter password">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3" for="gender">Sex:</label>
            <label class="col-xs-3"><input type="radio" name="optradio" checked>Male</label>
            <label><input type="radio" name="optradio">Female</label>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3" for="gender">DOB:</label>
            <div class="col-xs-3">
                <input type="date" class="form-control" id="dob">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3" for="gender">Address:</label>
            <div class="col-xs-3">
                <textarea class="form-control" rows="2" cols="20"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-3">
                <div class="checkbox">
                    <label><input type="checkbox"> Remember me</label>
                </div>

               
                    <input id="Submit1" type="submit" value="sign-in" />
               
                <input id="Reset1" type="reset" value="reset" />
            </div>
        </div>
    </div>
</div>

</form>
